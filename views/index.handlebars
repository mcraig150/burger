<div class="container">
  <h1 class="center">Eat-Da-Burger!</h1>

  <div class="row">
    <div class="col m6">
      <h2>Burgers</h2>

      {{#each burgers}}
      {{#unless eaten}}
      <div class="row">
        <div class="col m6">
          <div class="card-panel white">
            <span class="black-text">
              <h5 id="test">{{this.burger_name}}</h5>
            </span>
            <a  class="waves-effect waves-light btn eatBurger" key ="{{this.id}}" eaten = "{{this.eaten}}"> Eat! </a>
          </div>
        </div>
      </div>
      {{/unless}}
      {{/each}}
    </div>


    <div class="col m6">
      <h2>Eaten Burgers</h2>
      {{#each burgers}}
      {{#if eaten}}
      <div class="row">
        <div class="col m6">
          <div class="card-panel white">
            <span class="black-text">
              <h5>{{this.burger_name}}</h5>
            </span>
            <a class="waves-effect waves-light btn uneat" key={{this.id}};>Uneat!</a>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>

  </div>

  <div class="form-group row">
    <input class="col-ms" type="search" id="burgerName" placeholder="Enter Burger Name">
    <button id="add" class="btn" type="submit" name="action">Add</button>
  </div>
</div>


